{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
    			<div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Manage <b>Contacts</b></h2>
                        </div>
                        <div class="col-sm-6">
                            <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Employee</span></a>
                            <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>						
                        </div>
                    </div>
			    </div>
                <table class="table" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>StreetAddress</th>
                            <th>ZipCode</th>
                            <th>City</th>
                            <th>PhoneNumber</th>
                            <th>BirthDate</th>
                            <th>EmailAddress</th>
                            <th>PictureUrl</th>
                            <th>Picture</th>
                            <th>Country</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.id }}</td>
                            <td>{{ contact.firstName }}</td>
                            <td>{{ contact.lastName }}</td>
                            <td>{{ contact.streetAddress }}</td>
                            <td>{{ contact.zipCode }}</td>
                            <td>{{ contact.city }}</td>
                            <td>{{ contact.phoneNumber }}</td>
                            <td>{{ contact.birthDate ? contact.birthDate|date('Y-m-d') : '' }}</td>
                            <td>{{ contact.emailAddress }}</td>
                            <td>{{ contact.pictureUrl }}</td>
                            <td><img src="{{ asset('uploads/pictures/' ~ contact.pictureUrl) }}"></td>
                            <td>{{ contact.country }}</td>
                            <td>
                                <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                                <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                                <a href="{{ path('contact_edit', {'id': contact.id}) }}" class="edit"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
							    <a href="#deleteEmployeeModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="12">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('contact_new') }}">Create new</a>
{% endblock %}
