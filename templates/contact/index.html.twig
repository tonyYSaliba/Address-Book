{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>StreetAddress</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>PhoneNumber</th>
                <th>BirthDate</th>
                <th>EmailAddress</th>
                <th>PictureUrl</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.firstName }}</td>
                <td>{{ contact.lastName }}</td>
                <td>{{ contact.streetAddress }}</td>
                <td>{{ contact.zipCode }}</td>
                <td>{{ contact.city }}</td>
                <td>{{ contact.phoneNumber }}</td>
                <td>{{ contact.birthDate ? contact.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ contact.emailAddress }}</td>
                <td>{{ contact.pictureUrl }}</td>
                <td>{{ contact.country }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_new') }}">Create new</a>
{% endblock %}
