{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ contact.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ contact.lastName }}</td>
            </tr>
            <tr>
                <th>StreetAddress</th>
                <td>{{ contact.streetAddress }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ contact.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ contact.city }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ contact.phoneNumber }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ contact.birthDate ? contact.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EmailAddress</th>
                <td>{{ contact.emailAddress }}</td>
            </tr>
            <tr>
                <th>PictureUrl</th>
                <td>{{ contact.pictureUrl }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ contact.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">back to list</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
